generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // DATABASE_URL은 prisma.config.ts에서 개별 환경 변수들(POSTGRES_USER, POSTGRES_PASSWORD, POSTGRES_URL, POSTGRES_PORT, POSTGRES_DATABASE, POSTGRES_SCHEMA)로부터 자동 생성됩니다
  url      = env("DATABASE_URL")
}
